---
import { getRecentlyPlayed } from "../lib/spotify";

const data = await getRecentlyPlayed();
const tracks = data.items;
---

<section
  class="spotify-green-background border-t border-gray-300 px-10 md:px-0"
>
  <div
    class="container mx-auto py-[40px] lg:py-[50px] px-[20px] lg:px-[60px] md:border-l md:border-r border-gray-300"
  >
    <div class="lg:flex items-start justify-between mb-4">
      <div class="lg:pr-6 mb-6 lg:mb-0">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 512 512"
          height="34"
          width="34"
          class="mb-2 fill-spotify-green"
        >
          <path
            d="M256 8a248 248 0 1 0 0 496 248 248 0 1 0 0-496zM356.7 372.9c-4.2 0-6.8-1.3-10.7-3.6-62.4-37.6-135-39.2-206.7-24.5-3.9 1-9 2.6-11.9 2.6-9.7 0-15.8-7.7-15.8-15.8 0-10.3 6.1-15.2 13.6-16.8 81.9-18.1 165.6-16.5 237 26.2 6.1 3.9 9.7 7.4 9.7 16.5s-7.1 15.4-15.2 15.4zm26.9-65.6c-5.2 0-8.7-2.3-12.3-4.2-62.5-37-155.7-51.9-238.6-29.4-4.8 1.3-7.4 2.6-11.9 2.6-10.7 0-19.4-8.7-19.4-19.4s5.2-17.8 15.5-20.7c27.8-7.8 56.2-13.6 97.8-13.6 64.9 0 127.6 16.1 177 45.5 8.1 4.8 11.3 11 11.3 19.7-.1 10.8-8.5 19.5-19.4 19.5zm31-76.2c-5.2 0-8.4-1.3-12.9-3.9-71.2-42.5-198.5-52.7-280.9-29.7-3.6 1-8.1 2.6-12.9 2.6-13.2 0-23.3-10.3-23.3-23.6 0-13.6 8.4-21.3 17.4-23.9 35.2-10.3 74.6-15.2 117.5-15.2 73 0 149.5 15.2 205.4 47.8 7.8 4.5 12.9 10.7 12.9 22.6 0 13.6-11 23.3-23.2 23.3z"
          ></path></svg
        >
        <h2 class="text-2xl font-semibold text-black mb-1">My Spotify List</h2>
        <p class="mb-4 md:mb-0">
          These are the latest songs Iâ€™ve been grooving too
        </p>
      </div>
      <div class="inline-flex">
        <a
          href="https://open.spotify.com/user/ianpolatka"
          class="btn btn-spotify mb-4"
          target="_blank"
          >View My Spotify Profile
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
          </svg>
        </a>
      </div>
    </div>
    <ul class="grid grid-cols-2 md:grid-cols-4 gap-5 lg:grid-cols-5">
      {
        tracks?.map(({ track }) => (
          <li class="flex flex-col">
            <img
              src={track.album.images[0].url}
              alt={track.album.name}
              width="640"
              height="640"
              class="aspect-square w-full rounded-md object-cover mb-2"
            />

            <div class="flex flex-col">
              <span class="text-spotify-green text-xs font-bold">
                {track.artists.map((a) => a.name).join(", ")}
              </span>
              <strong class="text-black mb-1">{track.name}</strong>
              <span class="text-xs text-gray-500">{track.album.name}</span>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
